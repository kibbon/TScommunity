<div class="container">
	<div class="row">
		<div class="jumbotron col-md-offset-3 col-md-6">
		<h2 style="text-align:center;">-- Sign up --</h2>
		<hr/>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="field input-group">
			<%= f.label :email, class: "input-group-addon" %>
			<%= f.email_field :email, autofocus: true, class: "form-control" %>
		  </div>
		  <hr/>
		   <div class="field input-group">
			<%= f.label :name, class: "input-group-addon" %>
			<%= f.text_field :name, class: "form-control" %>
		  </div>
		  <hr/>
		  <div class="field input-group">
			<%= f.label :password, class: "input-group-addon" %>
			<%= f.password_field :password, autocomplete: "off", class: "form-control" %>
		  </div>
		  <hr/>	
		  <div class="field input-group">
			<%= f.label :password_confirmation, class: "input-group-addon" %>
			<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
		  </div>
			<% if @minimum_password_length %>
			<em style="float:right;">(Password <%= @minimum_password_length %> characters minimum)</em>
			<% end %>
		  <hr/>
		  <div class="field">
			<%= f.label "Please choose your role:" %>
			<div><%= f.select(:usertype, [['student','student'],['teacher','teacher']]) %></div>
		  </div>
		  <hr/>
		  <div class="actions">
			<%= f.submit "Sign up!", class: "btn btn-success btn-block", style: "color:white;" %>
		  </div>
		<% end %>
		<hr/>
		<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
